#ifndef __PS2SERKBD_SCANCODES_H__
#define __PS2SERKBD_SCANCODES_H__

{%- set indent = 22 %}

{{ '#define PS2SERKBD_{:<{indent}} "{}"'.format('BREAK', '\\xf0', indent=indent) }}
