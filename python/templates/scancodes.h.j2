{{ '#define PS2SERKBD_{:<{indent}} "\\xf0{}"'.format('BREAK_' + name, scancode, indent=indent) }}
{%- endif %}
{% endfor %}
// Values used in asciiMap
{%- for (name, scancode) in keys %}
{%- if name in ascii2keycode %}
{{ "#define PS2SERKBD_{:<{indent}} '{}'".format(name, scancode, indent=indent) }}
{%- endif %}
{%- endfor %}

#endif /* !__PS2SERKBD_SCANCODES_H__ */

